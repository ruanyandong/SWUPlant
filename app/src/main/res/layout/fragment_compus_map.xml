<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent" android:focusable="true" 
        android:layout_height="match_parent"
        android:clickable="true" />

    <RelativeLayout
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:paddingTop="10dp">
        <com.example.ai.swuplant.customcomponent.ClearEditText
            android:id="@+id/map_search_edit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:paddingLeft="8dp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp" android:layout_marginStart="60dp" android:background="@color/colorGreen"
            android:drawableLeft="@drawable/search"
            android:drawableStart="@drawable/search" android:hint="@string/search_hint"
            android:drawablePadding="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:paddingStart="8dp" android:textSize="15dp" />

        <TextView
            android:id="@+id/search_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:text="搜索"
            android:clickable="true"
            android:focusable="true" android:gravity="center"
            android:layout_alignParentEnd="true" android:background="@drawable/search_text_view_style"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>

    </RelativeLayout>



</FrameLayout>